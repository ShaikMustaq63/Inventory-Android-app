<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S no."
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order no."
            android:layout_marginTop="70sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ccode"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icode"
            android:layout_marginTop="170sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_marginTop="220sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                       
        <Spinner
            android:id="@+id/orderno"
            android:layout_width="208dp"
            android:layout_height="34dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="75sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" 
            android:layout_marginTop="280sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:layout_marginTop="340sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="285sp"
            android:ems="10"
            android:hint="dd/mm/yyyy"
            android:inputType="date" >

            <requestFocus/>
</EditText>

        <EditText
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="345sp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/sno"
            android:layout_width="208dp"
            android:layout_height="39dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="25sp"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button1"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="418sp"
            android:background="@android:color/transparent"
            android:textColor="#691744"
            android:text="Submit"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/ccode"
            android:layout_width="206dp"
            android:layout_height="39dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="120sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/icode"
            android:layout_width="209dp"
            android:layout_height="37dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="170sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="209dp"
            android:layout_height="42dp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="220sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </FrameLayout>

</LinearLayout>